.m-shadow {
  box-shadow: 0px 3px 10px 0px rgba(173, 179, 191, 0.3);
}
.m-gradient {
  background: linear-gradient(#007aff, #0063ce);
}
.head-top {
  position: fixed;
  width: 100%;
  z-index: 9;
}
.page-body {
  position: relative;
}
.search {
  padding: 20rpx;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  background: #fff;
}
.search input {
  display: block;
  box-sizing: border-box;
  background: rgba(255, 255, 255, 0.8);
  border: 1rpx solid #e3e3e3;
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
  padding-left: 32rpx;
  font-size: 28rpx;
}
.search image {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 30rpx;
  right: 40rpx;
  z-index: 2;
}
.list .list-item {
  position: relative;
  padding: 10rpx;
  display: flex;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 5rpx;
}
.list .list-item .pic {
  margin-top: 8rpx;
  width: 280rpx;
  height: 300rpx;
}
.list .list-item .list-item-desc {
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.list .list-item .list-item-desc .it-title {
  font-size: 32rpx;
  font-weight: bold;
  color: 32rpx;
  height: 100rpx;
}
.list .list-item .list-item-desc .it-operate {
  display: flex;
  justify-content: space-between;
}
.list .list-item .list-item-desc .it-operate .price-box {
  display: flex;
  flex-direction: column;
}
.list .list-item .list-item-desc .it-operate .price-box .price {
  color: #bd1b2d;
  font-weight: bold;
}
.list .list-item .list-item-desc .it-operate .price-box .price .pri {
  font-size: 32rpx;
}
.list .list-item .list-item-desc .it-operate .price-box .price .pri-val {
  font-size: 48rpx;
}
.list .list-item .list-item-desc .it-operate .price-box .price-old {
  font-size: 24rpx;
  color: #999;
}
.list .list-item .list-item-desc .it-operate .count-box {
  display: flex;
  align-items: center;
}
.list .list-item .list-item-desc .it-operate .count-box .count {
  color: #666;
  font-size: 28rpx;
}
